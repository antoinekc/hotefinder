<h1>Liste des utilisateurs (hÃ´tes)</h1>


<ul>
  <% @users.each do |user| %>
    <% if user.is_host %>
      <li><%= user.email %></li>
      <li><%= user.first_name %></li>
      <li><%= user.last_name %></li>
      <li><%= user.phone_number %></li>
      <li><%= user.birthdate %></li>
      <li><%= user.commission %></li>
      <li><%= user.is_available %></li>

      <% if user.avatar.attached? %>
        <%= image_tag user.avatar.variant(resize_to_fill: [150, 150]) %>
      <% end %>
      
      <br>
      <li><%= link_to 'show', user_path(user) %></li>
      <br>
    <% end %>
  <% end %>
</ul>


<% if user_signed_in? %>
  <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete } %>
<% end %>