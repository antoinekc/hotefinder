<head>
  <meta name="description" content="Page de creation de mot de passe">
</head>

<body class="mx-auto">
  <img src="https://images.pexels.com/photos/1115804/pexels-photo-1115804.jpeg" alt="image de fond representant une maison de location" class="opacity-50 absolute inset-0 -z-10 h-full w-full object-cover object-center flex items-center">
  <div class="flex items-center justify-center">
    <div class="bg-HFdark bg-opacity-50 my-8 rounded-xl p-8 flex flex-col space-y-4 w-full max-w-sm items-center justify-center">
      <h2 class="text-white text-2xl font-semibold">Mot de passe perdu?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mt-3">
          <%= f.label :email, class: "text-HFlight flex items-center text-sm" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-opacity-50 p-2 rounded-full shadow-md bg-HFlight text-HFdark placeholder-HFlight-100 focus:outline-none focus:ring-2 focus:ring-blue-500 placeholder-HFlight text-sm w-80", placeholder:"hello@hotefinder.com" %>
        </div>

        <div class="actions mt-8 flex justify-center">
          <%= f.submit "Envoyer les instructions", class: "btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>
