<%- if controller_name != 'sessions' %>
  <%= link_to "Me connecter", new_session_path(resource_name), class: "text-white" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "M'inscrire", new_registration_path(resource_name), class: "text-white" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Mot de passe perdu?", new_password_path(resource_name), class: "text-white" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Pas recu l'email de confirmation?", new_confirmation_path(resource_name), class: "text-white" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Pas recu les infos de debloquage?", new_unlock_path(resource_name), class: "text-white" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Se connecter avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "text-white" %><br />
  <% end %>
<% end %>
