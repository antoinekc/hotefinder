<div>
  <h1 class="font-bold text-4xl">Welcome#index</h1>
  <p>Find me in app/views/welcome/index.html.erb</p>

  <% if user_signed_in? %>
  <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure you want to sign out?' }, class: 'btn btn-danger' %>
  <% else %>
  <%= button_to 'Sign In', new_user_session_path, method: :post, data: { confirm: 'Are you sure you want to sign out?' }, class: 'btn btn-danger' %>
<% end %>
</div>
