<section class="py-12">
  <h2 class="mt-2 text-3xl mb-10 text-center font-bold tracking-tight font-serif sm:text-4xl text-violet-950">Nos concierges</h2>
  <div class="mx-auto max-w-7xl ">
    <div class="flex justify-center space-x-20">
      <% @randusers.first(2).each do |user| %>
        <div class="w-full">
          <div class="bg-white rounded-lg transition-transform hover:scale-20 flex items-center overflow-hidden">
