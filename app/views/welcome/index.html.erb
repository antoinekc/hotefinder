        </div>
      
      </dl>
    </div>
  </div>
  </div>

<!-- Random User Cards display -->
<section class="py-12 px-4">
  <h2 class="text-3xl font-bold mb-8 text-center">Our Users</h2>
  <div class="flex flex-wrap justify-center -mx-4">
    <% @randusers.each do |user| %>
      <div class="w-full md:w-1/2 lg:w-1/3 xl:w-1/4 px-4 mb-8">
        <div class="bg-white rounded-lg shadow-md dark:bg-gray-800 transition-transform transform hover:-translate-y-2 hover:shadow-2xl hover:scale-105">
          <a href="#">
            <% if user.avatar.attached? %>
              <%= image_tag user.avatar.variant(resize_to_fill: [150, 150]), class: "rounded-t-lg w-full", alt: "images concierges" %>
            <% end %>
          </a>
          <div class="px-5 pb-5">
            <a href="#">
              <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white"><%= user.first_name %> <%= user.last_name %></h5>
            </a>
            <div class="flex items-center justify-between">
              <span class="text-lg font-bold text-gray-900 dark:text-white">20€/h only!</span>
              <a href="#" class="btn-primary">Hire</a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>



    <!-- Authentication Buttons Section -->
    <section class="text-center py-12 mx-4">
      <% if user_signed_in? %>
        <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure you want to sign out?' }, class: 'btn btn-primary' %>
      <% else %>
        <%= button_to 'Sign In', new_user_session_path, method: :post, data: { confirm: 'Are you sure you want to sign out?' }, class: 'btn btn-primary' %>
      <% end %>
    </section>
    
  </main>
</div>

