            <% end %>
            <div class="p-6 w-2/3 md:w-1/2 text-gray-900 text-bo dark:text-white">
              <a href="#">
                <h5 class="text-xl font-semibold tracking-tight text-gray-900"><%= user.first_name %></h5>
              </a>
              <p class="mt-2 text-base text-gray-700 italic"><%= user.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>



