<!DOCTYPE html>
<html>
  <head>
    <title>Hotefinder</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="flex flex-col min-h-screen">
  <%= render 'shared/navbar' %>

  <main class="flex-grow flex flex-col mt-0">
    <div class="flex-grow flex flex-col items-center justify-center max-h-12">
      <!-- Homemade flashes -->
      <% flash.each do |type, message| %>
        <div class="container mx-auto mt-4">
          <% if type == 'notice' %>
            <div class="bg-green-100 border border-green-400 text-green-700 p-4">
              <strong>Succ√®s!</strong>
              <span class="block sm:inline"><%= message %></span>
            </div>
          <% elsif type == 'alert' %>
            <div class="bg-red-100 border border-red-400 text-red-700 p-4">
              <strong>Erreur!</strong>
              <span class="block sm:inline"><%= message %></span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </main>
  
  <%= render 'shared/footer' %>
</body>
