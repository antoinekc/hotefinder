

<body>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Missions" %>

  <div class="flex justify-between items-center mb-5">
    <h1 class="font-bold text-4xl">Missions</h1>
    <%= link_to "New mission", new_mission_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="missions" class="min-w-full">
    <% @missions.each do |mission| %>
      <div class="bg-white shadow-md rounded-lg p-5 mb-5">
        <h2 class="text-lg font-medium mb-2"><%= mission.title %></h2>
        <p class="mb-2"><%= mission.description %></p>
        <p class="mb-2"><%= mission.host.first_name %> <%= mission.host.last_name %></p>
        <p class="mb-2">DÃ©but: <%= mission.start_date %></p>
        <p class="mb-4">Fin: <%= mission.end_date %></p>

        <%= link_to "Show this mission", mission_path(mission), class: "ml-2 rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium" %>
        <%= link_to "Edit", edit_mission_path(mission), class: "ml-2 rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium" %>
        <%= button_to "Delete", mission, method: :delete, class: "ml-2 rounded-lg py-2 px-4 bg-red-500 text-white font-medium" %>
      </div>
    <% end %>
  </div>
</div>
</body>
