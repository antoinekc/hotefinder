<body>
  <div class="w-full mt-5">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% content_for :title, "Missions" %>

    <div class="flex flex-col items-center mb-5 justify-center relative w-full h-120">
      <div class="relative w-full h-full p-5 bg-HFdark opacity-70">
        <img src="https://images.pexels.com/photos/279100/pexels-photo-279100.jpeg" alt="" class="absolute inset-0 h-full w-full object-cover object-center">
        <div class="relative flex flex-col items-center justify-center h-full">
          <h1 class="font-bold text-4xl text-HFblue-200 mb-10 mt-10">Missions</h1>
          <%= link_to "Ajouter une nouvelle mission", new_mission_path, class: "btn-primary mt-5 mb-5" %>
        </div>
      </div>
    </div>

    <div id="missions" class="flex flex-wrap justify-center p-2 gap-4">
      <% @missions.each do |mission| %>
        <div class="bg-HFlight shadow-md rounded-lg p-5 w-full sm:w-1/2 lg:w-1/3 xl:w-1/4 mb-5">
          <h2 class="text-2xl font-bold text-HFblue-200 mb-5"><%= mission.title %></h2>
          <% if mission.owner_id == current_user.id %>
            <p class="text-2xl font-bold text-red mb-5">Attente de réponse</p> 
          <% end %>
          <p class="my-4"><span class="font-bold text-HFblue-200">Statut :</span> <%= mission.status %></p>
          <div>
            <span class="font-bold text-HFblue-200">Description:</span><br>
            <%= mission.description %>
          </div>
          <p class="my-4"></p>
          <p class="mb-2"><%= mission.host.first_name %> <%= mission.host.last_name %></p>
          <div class="flex items-center">
            <p class="mb-2 text-HFblue-200">Début: <%= mission.start_date %></p>
          </div>
          <p class="mb-4 text-HFblue-200">Fin: <%= mission.end_date %></p>
          <div class="flex justify-end items-center gap-2 mt-4">
            <%= link_to "Voir mission", mission_path(mission), class: "btn-primary" %>
            <% if mission.owner_id == current_user.id %>
              <% if (mission.status != "En cours" && mission.status != "Terminée")%>
                <%= link_to "Modifier", edit_mission_path(mission), class: "rounded-full py-2 px-5 text-white bg-HFdark inline-block font-medium" %>
                <%= button_to "Supprimer", mission, method: :delete, class: "btn-secondary" %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>
