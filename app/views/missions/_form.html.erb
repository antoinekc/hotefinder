<head>
<meta name="description" content="Le fichier de partial des formulaires.">
</head>

<%= form_with(model: mission, class: "space-y-6") do |form| %>
  <% if mission.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <h2 class="font-bold mb-2"><%= pluralize(mission.errors.count, "Erreur") %></h2>
      <ul class="list-disc pl-5">
        <% mission.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = 'flex items-start flex-col mx-4'>
    <%= form.label :title, class: "block text-sm font-medium text-HFblue-200 mr-2" %>
    <%= form.text_field :title, class: "mt-1 block w-full shadow-sm sm:text-sm rounded-md text-HFdark border-HFlight hover:border-HFblue-200"  %>
  </div>

  <div class = 'flex items-start flex-col mx-4'>
    <%= form.label :description, class: "block text-sm font-medium text-HFblue-200 mr-2" %>
    <%= form.text_area :description, class: "mt-1 block w-full shadow-sm sm:text-sm rounded-md text-HFdark border-HFlight hoover:border-HFblue-200" %>
  </div>

<div class="flex flex-row">
  <div class="flex items-start mx-4">
    <%= form.label :start_date, class: "block text-sm font-medium text-HFblue-200 mb-2" %>
    <%= form.date_select :start_date, class: "flex mt-1 block w-full flex-row shadow-sm text-sm rounded-md text-HFdark border-HFlight hover:border-HFblue-200" %>
  </div>

  <div class="flex items-start mx-4">
    <%= form.label :end_date, class: "block text-sm font-medium text-HFblue-200 mb-2" %>
    <%= form.date_select :end_date, class: "flex mt-1 block w-full flex-row sm:text-sm rounded text-HFdark border-HFlight hover:border-HFblue-200" %>
  </div>
</div>


  <div class ='flex items-start flex-col mx-4'>
    <%= form.label :city_id,"Ville", class: "block text-sm font-medium text-HFblue-200 mr-2" %>
    <%= form.text_field :city_id, value: "Paris", readonly: true, class: "mt-1 block w-full shadow-sm sm:text-sm rounded-md text-HFdark border-HFlight hoover:border-HFblue-200 bg-gray-200" %>
    <%= form.hidden_field :city_id, value: 1 %>
  </div>

  <div class = 'flex items-start flex-col mx-4'>
    <%= form.label :host_id, "Concierge", class: "block text-sm font-medium text-HFblue-200 mr-2" %>
    <% if @mission.persisted? %>
      <%= form.select :host_id, options_for_select(User.all.map { |user| ["#{user.first_name} #{user.last_name}", user.id] }, @mission.host_id), { include_blank: true }, class: "mt-1 block w-full shadow-sm sm:text-sm rounded-md text-HFdark border-HFlight hoover:border-HFblue-200" %>
    <% else %>
      <%= form.select :host_id, options_for_select(User.all.map { |user| ["#{user.first_name} #{user.last_name}", user.id] }, params[:host_id]), { include_blank: true }, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    <% end %>
  </div>

  <%= form.hidden_field :host_id, value: @user.id if @user.present? %>

  <div class = 'flex items-start flex-col mx-4'>
    <%= form.label :postal_code,"Arrondissement", class: "block text-sm font-medium text-HFblue-200 mr-2" %>
    <%= form.select :postal_code, options_for_select(paris_zip_codes), class: "mt-1 block w-full shadow-sm sm:text-sm rounded-md text-HFdark border-HFlight hoover:border-HFblue-200" %>  
  </div>

  <div class="mx-auto">
    <%= form.submit "Save Mission", class: "btn-primary" %>
  </div>

<% end %>