<%= form_with(model: mission, class: "space-y-6") do |form| %>
  <% if mission.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <h2 class="font-bold mb-2"><%= pluralize(mission.errors.count, "error") %> prohibited this mission from being saved:</h2>
      <ul class="list-disc pl-5">
        <% mission.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :start_date, class: "block text-sm font-medium text-gray-700" %>
    <%= form.date_select :start_date, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div>
    <%= form.label :end_date, class: "block text-sm font-medium text-gray-700" %>
    <%= form.date_select :end_date, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

   <div>
    <%= form.label :host_id, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :host_id, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

   <div>
    <%= form.label :Ville, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :city_name, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <%= form.label :postal_code, class: "block text-sm font-medium text-gray-700" %>
  <%= form.select :postal_code, options_for_select(paris_zip_codes), {}, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>  


  <div class="flex justify-end">
    <%= form.submit "Save Mission", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer hover:bg-blue-700" %>
  </div>
<% end %>
